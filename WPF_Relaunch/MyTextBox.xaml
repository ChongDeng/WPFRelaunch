<UserControl x:Class="WPF_Relaunch.MyTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Relaunch"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox Height="100" Margin="10" VerticalAlignment="top"
                 Text="Mondopad is an elegant all-in-one touchscreen system for efficient face-to-face collaboration with people anywhere. Video conference, whiteboard, share data, and more — you'll never want to meet without it."
                 TextWrapping="Wrap" Foreground="Blue" FontWeight="Bold"
                 AcceptsReturn="True" AcceptsTab="True"
                 TextChanged="TextBox_TextChanged">            
        </TextBox>
    </Grid>
</UserControl>
